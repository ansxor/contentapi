{
  "Serilog": {
    "Using":  ["Serilog.Sinks.Console", "Serilog.Sinks.File"],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "contentapi": "Information",
        "Microsoft.EntityFrameworkCore" : "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      { "Name": "Console" }
    ],
    "Enrich": ["FromLogContext"]
  },
  "IpRateLimiting": {
    "EnableEndpointRateLimiting": true,
    "StackBlockedRequests": false,
    "RealIpHeader": "X-Real-IP",
    "ClientIdHeader": "X-ClientId",
    "HttpStatusCode": 429,
    "GeneralRules": [
      {
        "Endpoint": "*:/api/user/register*",
        "Period": "1m",
        "Limit": 3 
      },
      {
        "Endpoint": "*:/api/user/authenticate",
        "Period": "1h",
        "Limit": 30
      },
      {
        "Endpoint": "*:/api/user/basic",
        "Period": "1m",
        "Limit": 4
      },
      {
        "Endpoint": "*:/api/user/sensitive",
        "Period": "15s",
        "Limit": 1
      },
      {
        "Endpoint": "*:/api/read/chain",
        "Period": "45s",
        "Limit": 45 
      },
      {
        "Endpoint": "*:/api/read/listen",
        "Period": "2s",
        "Limit": 6
      },
      {
        "Endpoint": "*:/api/comment*",
        "Period": "5s",
        "Limit": 3
      }
    ]
  },
  "ShowExceptions" : false,
  "AllowedHosts": "*",
  "DatabaseConfig": {
    "DbType" : "<mysqlOrsqlite>",
    "ConnectionString": "<yourconnectionstring>",
    "SensitiveLogging" : false
  },
  "SystemConfig" : {
    "SuperUsers" : [2, 3, 9 ],
    "SuperRootCategories" : true,
    "ListenTimeout" : "00:05:00",
    "ListenGracePeriod" : "00:00:05"
  },
  "EmailConfig" : {
    "User": "<youneedanemail>",
    "Host": "<yoursmtpserver>",
    "Port": <port>,
    "Password": "<password>",
    "SubjectFront": "SmileBASIC Source"
  },
  "LanguageConfig" : {
    "LanguageFolder" : "LanguageFiles"
  },
  "TokenServiceConfig": {
    "TokenExpiration": "60:00:00:00",
    "SecretKey": "<somethingverylong,64charsatleast?>"
  },
  "FileControllerConfig" : {
    "Location" : "<wheretoputuploads>",
    "MaxSize" : 2000000,
    "QuantizerProgram" : "<pathTopngquant>"
  },
  "UserControllerConfig" : {
    "NameChangesPerTime" : 3,
    "NameChangeRange" : "30:00:00:00",
    "PasswordResetExpire" : "01:00:00"
  },
  "TempTokenServiceConfig" : {
    "TokenLifetime" : "1:00:00"
  },
  "ChainServiceConfig" : {
    "MaxChains" : 10
  },
  "ModuleServiceConfig" : {
    "ModuleDataConnectionString" : "Data Source=moduledata.db;"
  },
  "SimpleCodeTimerConfig" : {
    "LogImmediate" : false
  }
}
